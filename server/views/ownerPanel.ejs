
<!DOCTYPE html>
<html>
<head>
  <title>Owner Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1 class="mb-4">Owner Panel</h1>
  <table class="table table-bordered">
    <thead>
      <tr><th>ID</th><th>Email</th><th>Username</th><th>Role</th><th>Actions</th></tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <% if (user.role === 'user') { %>
              <form action="/owner/promote/<%= user.id %>" method="POST" style="display:inline;">
                <button class="btn btn-success btn-sm">Promote to Admin</button>
              </form>
            <% } else if (user.role === 'admin') { %>
              <form action="/owner/demote/<%= user.id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger btn-sm">Demote to User</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
